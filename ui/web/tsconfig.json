{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@bullet": ["components/atoms/bullet"],
      "@bullet/*": ["components/atoms/bullet/*"],
      "@button": ["components/atoms/button"],
      "@button/*": ["components/atoms/button/*"],
      "@input": ["components/atoms/input"],
      "@input/*": ["components/atoms/input/*"],
      "@card": ["components/molecules/card"],
      "@card/*": ["components/molecules/card/*"],
      "@particle/*": ["components/particles/*"],
      "@prototype": ["components/prototype"],
      "@prototype/*": ["components/prototype/*"],
      "@animation/*": ["components/animation/*"],
      "@banner/*": ["components/organisms/banner/*"],
      "@header/*": ["components/organisms/header/*"],
      "@create": ["components/prototype/create"],
      "@create/*": ["components/prototype/create/*"],
      "@bar/*": ["components/organisms/bar/*"],
      "@footer/*": ["components/organisms/footer/*"],
      "@modal/*": ["components/organisms/modal/*"],
      "@section/*": ["components/organisms/section/*"],
      "@layout": ["components/layout"],
      "@layout/*": ["components/layout/*"],
      "@template": ["components/template"],
      "@template/*": ["components/template/*"],
      "@styles/*": ["styles/*"],
      "@svg/*": ["public/svg/*"],
      "@helper/*": ["helper/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@content": ["content/index.ts"],
      "@config": ["config/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".storybook/**/*"],
  "exclude": ["node_modules"]
}
