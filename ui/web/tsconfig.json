{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@template": ["../components/template"],
      "@template/*": ["../components/template/*"],
      "@styles/*": ["styles/*"],
      "@helper/*": ["helper/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@config": ["config/index.ts"],
      "@api": ["api"],
      "@api/*": ["api/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".storybook/**/*",
    "../components/atoms/button/web/button.border.tsx"
  ],
  "exclude": ["node_modules"]
}
