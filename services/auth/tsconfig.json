{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "src"
  },
  "references": [
    { "path": "../../packages/error" },
    { "path": "../../packages/middleware" }
  ]
}
